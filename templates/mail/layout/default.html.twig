{% apply inline_css(source('mail/theme/bootstrap.min.css'), source('mail/theme/mail.css')) %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{# empty #}{% endblock %}</title>
</head>
<body class="bg-light">
    <div class="container">
        <div class="card mt-5">
            <div class="card-body">
                {% block content %}{# empty #}{% endblock %}
            </div>
        </div>
    </div>
</body>
</html>
{% endapply %}
