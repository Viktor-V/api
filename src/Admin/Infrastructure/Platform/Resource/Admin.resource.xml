<?xml version="1.0" encoding="UTF-8" ?>
<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata
        https://api-platform.com/schema/metadata/metadata-2.0.xsd">

    <resource class="App\Admin\Domain\DataTransfer\Admin" shortName="Admin" description="Admin">
        <property name="uuid" identifier="true" writable="false"/>

        <attribute name="normalization_context">
            <attribute name="groups">
                <attribute>read</attribute>
            </attribute>
        </attribute>

        <attribute name="denormalization_context">
            <attribute name="groups">
                <attribute>write</attribute>
            </attribute>
        </attribute>

        <collectionOperations>
            <collectionOperation name="get">
                <attribute name="pagination_client_items_per_page">true</attribute>
                <attribute name="pagination_items_per_page">5</attribute>
            </collectionOperation>
            <collectionOperation name="post"/>
        </collectionOperations>

        <itemOperations>
            <itemOperation name="get" />

            <itemOperation name="patch_confirmation">
                <attribute name="method">patch</attribute>
                <attribute name="path">/admin/{uuid}/confirm</attribute>

                <attribute name="denormalization_context">
                    <attribute name="groups">
                        <attribute>confirm</attribute>
                    </attribute>
                </attribute>

                <attribute name="openapi_context">
                    <attribute name="summary">Confirm signup</attribute>
                </attribute>
            </itemOperation>
        </itemOperations>
    </resource>
</resources>
